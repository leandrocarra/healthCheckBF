<!DOCTYPE html>
<html>
<script>
  setTimeout(() => {
    window.location.reload();
  }, 5000);
</script>
<head>
  <style type="text/css">
    html,
    body,
    div,
    span {
      margin: 0;
      padding: 0;
      border: 0;
      font-size: 100%;
      font: inherit;
      vertical-align: baseline;
    }
    body {
      line-height: 1;
      background-color: #000;
      color: white;
      font-size: 18px;
      font-weight: 700;
      font-family: Arial, Helvetica, sans-serif;
    }
    .main{
      width: 960px;
      margin: 0 auto;
    }
    ol,
    ul {
      list-style: none;
    }
    li {
      margin: 1%;
      border-radius: 10px;
      padding: 20px;
      border-bottom: 2px solid #0086ff;
      box-shadow: 1px 1px 1px 1px rgba(255,255,255,0.5);
      background-color: #028f25;
      text-align: center;
      float: left;
      width: 31%;
      text-transform: uppercase;
      box-sizing: border-box;
    }
    .OFF {
      background-color: red;
    }
  </style>
</head>

<body>
  <div class="main">
    <ul>
      <% result.forEach(function(site){ %>
      <li <% if(site.online == false){%> class="OFF"<%}%></li>
        <%= site.name %>
      </li>
      <% }); %>
    </ul>
  </div>
</body>
</html>